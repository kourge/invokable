{
  "compilerOptions": {
    "target": "es5",
    "lib": ["es2015", "es2017.object"],
    "module": "commonjs",

    "alwaysStrict": true,

    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,

    "esModuleInterop": true
  },
  "include": ["./**/*"],
}
